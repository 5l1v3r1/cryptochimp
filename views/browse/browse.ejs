<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>

  <body>
    <%- include("../partials/nav.ejs") %>
    <main>
      <div class="container">
        <h4 class="display-5 fw-bold">Cryptocurrencies</h4>

        <br />

        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Logo</th>
              <th scope="col">Symbol</th>
              <th scope="col">Name</th>
              <th scope="col">Price</th>
              <th scope="col">1d price</th>
            </tr>
          </thead>
          <tbody>
            <% let priceChange; %> <% let roundedPriceChange; %>
            <!-- Show all coins -->
            <% coins.data.forEach(coin => { %>
            <!-- Convert price change decimal to percentage and round to two decimal points -->
            <% priceChange = coin["1d"].price_change_pct * 100 %> <%
            roundedPriceChange = priceChange.toFixed(2)%>
            <tr>
              <th scope="row"><%= coin.rank %></th>
              <th>
                <img
                  src="<%= coin.logo_url %>"
                  alt=""
                  width="auto"
                  height="24"
                />
              </th>
              <td><%= coin.symbol %></td>
              <td><%= coin.name %></td>
              <td><%= coin.price %>â‚¬</td>
              <!-- If price change is negative turn red, else turn green -->
              <% if(roundedPriceChange < 0) {%>
              <td style="color: #fd6e70"><%= roundedPriceChange %>%</td>
              <% } else {%>
              <td style="color: #3fcc6f"><%= roundedPriceChange %>%</td>

              <% } %>
            </tr>
            <% }); %>
          </tbody>
        </table>

        <!-- If first page: disable previous button -->
        <% if (current === 1) { %>
        <nav aria-label="Page navigation example">
          <ul class="pagination">
            <li class="page-item disabled">
              <a class="page-link" href="#" aria-label="Previous" tabindex="-1">
                <span aria-hidden="true">&laquo;</span>
              </a>
            </li>
            <li class="page-item">
              <a class="page-link" href="/browse/1">1</a>
            </li>
            <li class="page-item">
              <a class="page-link" href="/browse/2">2</a>
            </li>
            <li class="page-item">
              <a class="page-link" href="/browse/3">3</a>
            </li>
            <li class="page-item disabled">
              <a class="page-link" href="#" tabindex="-1">...</a>
            </li>
            <li class="page-item">
              <a class="page-link" href="/browse/58">58</a>
            </li>
            <li class="page-item">
              <a class="page-link" href="/browse/<%= next %>" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
          </ul>
        </nav>
        <!-- If last page: disable next button -->
        <% } else if (current === 58) { %>
        <nav aria-label="Page navigation example">
          <ul class="pagination">
            <li class="page-item">
              <a
                class="page-link"
                href="/browse/<%= previous %>"
                aria-label="Previous"
              >
                <span aria-hidden="true">&laquo;</span>
              </a>
            </li>
            <li class="page-item">
              <a class="page-link" href="/browse/1">1</a>
            </li>
            <li class="page-item">
              <a class="page-link" href="/browse/2">2</a>
            </li>
            <li class="page-item">
              <a class="page-link" href="/browse/3">3</a>
            </li>
            <li class="page-item disabled">
              <a class="page-link" href="#" tabindex="-1">...</a>
            </li>
            <li class="page-item">
              <a class="page-link" href="/browse/58">58</a>
            </li>
            <li class="page-item disabled">
              <a class="page-link" href="#" aria-label="Next" tabindex="-1">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
          </ul>
        </nav>
        <!-- Else: show both -->
        <% } else { %>
        <nav aria-label="Page navigation example">
          <ul class="pagination">
            <li class="page-item">
              <a
                class="page-link"
                href="/browse/<%= previous %>"
                aria-label="Previous"
              >
                <span aria-hidden="true">&laquo;</span>
              </a>
            </li>
            <li class="page-item">
              <a class="page-link" href="/browse/1">1</a>
            </li>
            <li class="page-item">
              <a class="page-link" href="/browse/2">2</a>
            </li>
            <li class="page-item">
              <a class="page-link" href="/browse/3">3</a>
            </li>
            <li class="page-item disabled">
              <a class="page-link" href="#" tabindex="-1">...</a>
            </li>
            <li class="page-item">
              <a class="page-link" href="/browse/58">58</a>
            </li>
            <li class="page-item">
              <a class="page-link" href="/browse/<%= next %>" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
          </ul>
        </nav>
        <% } %>
      </div>
    </main>

    <%- include("../partials/footer.ejs") %>
  </body>
</html>
