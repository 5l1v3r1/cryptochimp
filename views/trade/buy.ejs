<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>

  <body>
    <%- include("../partials/nav.ejs") %>
    <main class="center">
      <div class="container">
        <div class="row g-5">
          <div class="col-md-7 col-lg-8">
            <h4 class="mb-3">Buy crypto</h4>
            <form class="needs-validation" novalidate="">
              <div class="row gy-3">
                <div class="col-md-3">
                  <label for="cc-expiration" class="form-label">Symbol</label>
                  <input
                    type="text"
                    class="form-control"
                    id="cc-expiration"
                    placeholder=""
                    required=""
                  />
                  <div class="invalid-feedback">Symbol required</div>
                </div>

                <div class="col-md-3">
                  <label for="cc-cvv" class="form-label">Quantity</label>
                  <input
                    type="text"
                    class="form-control"
                    id="cc-cvv"
                    placeholder=""
                    required=""
                  />
                  <div class="invalid-feedback">Quantity required</div>
                </div>

                <hr class="my-4" />

                <button class="w-100 btn btn-primary btn-lg" type="submit">
                  Buy
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>

    <%- include("../partials/footer.ejs") %>
  </body>
</html>
